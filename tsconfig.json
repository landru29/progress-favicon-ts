{
    "files": [
        "src/favicon-loading.ts"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": false,
        "strict": true,
        "allowJs": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist/public",
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "*": [
                "node_modules/*",
            ]
        },
        "typeRoots": ["./node_modules/@types"],
        "plugins": [
            { "name": "typescript-tslint-plugin" }
          ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "./src"
    ]
}